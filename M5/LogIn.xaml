<Window x:Class="M5.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M5"
        mc:Ignorable="d"
        Title="LogIn" Height="1080" Width="1920" WindowState="Maximized" ResizeMode="NoResize">
    <Page Background="White">
        <!-- Top Section -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image Source="Resources(Images)\logo.png" Grid.Row="0" Width="550" Height="137.5" />



            <TextBlock 
                Text="Log In" 
                Grid.Row="1" 
                FontSize="70" 
                TextAlignment="Center" 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontFamily="Gill Sans MT"
                Foreground="#3EB489"/>

            <Border 
                    Background="#3EB489" 
                    CornerRadius="20" 
                    Grid.Row="2"
                    VerticalAlignment="Top"
                    Padding="10" 
                    Width="360" 
                    Height="64">
                <TextBox x:Name="username"
                     Grid.Row="2"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     Width="364" Height="50"
                     GotFocus ="username_GotFocus"
                     Text="Username"
                     TextAlignment="Center"
                     BorderThickness="0"
                     FontSize="30"
                     FontFamily="Gill Sans MT"
                     Background="#3EB489"
                     Foreground="LightGray" TextChanged="username_TextChanged"/>
            </Border>

            <Border 
                    Background="#3EB489" 
                    CornerRadius="20" 
                    Grid.Row="2"
                    VerticalAlignment="Center"
                    Padding="10" 
                    Width="360" 
                    Height="64">
                <PasswordBox x:Name="password"
                     Grid.Row="2"
                     Password = ""
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Width="364" Height="50"
                     Background="#3EB489"
                     FontSize="30"
                     FontFamily="Gill Sans MT"/>
            </Border>
            <Border 
                    Background="Black" 
                    CornerRadius="20" 
                    Grid.Row="2"
                    VerticalAlignment="Bottom"
                    Padding="10" 
                    Width="196" 
                    Height="64">
                <Button x:Name="Log_In"
                        Style="{StaticResource ZoomButtonStyle}"
                        Template="{StaticResource NoMouseOverButtonTemplate}"
                        Content="Log In" 
                        Margin="3,-2,3,0" 
                        Width="170" 
                        Height="46" 
                        Padding="10" 
                        Background="Black" 
                        Foreground="White" 
                        FontSize="20" 
                        FontWeight="Bold" 
                        BorderThickness="0" Click="Log_In_Click"/>
            </Border>

            <Button x:Name="Sign_Up"
                        Template="{StaticResource NoMouseOverButtonTemplate}"
                        Content="Sign Up!"
                        FontStyle="Italic"
                        Grid.Row="3" 
                        FontSize="25" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontFamily="Gill Sans MT"
                        Width="370" 
                        Height="70" 
                        Padding="10" 
                        Background="White" 
                        Foreground="#3EB489" 
                        FontWeight="Bold" 
                        BorderThickness="0" Click="Sign_Up_Click"/>


        </Grid>
    </Page>
</Window>
