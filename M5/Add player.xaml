                     VerticalContentAlignment="Center"
                     Width="400" Height="70"
                     Text="Weight"
                     TextAlignment="Center"
                     BorderThickness="0"
                     FontSize="30"
                     FontFamily="Gill Sans MT"
                     Background="#3EB489"
                     Foreground="LightGray"
                     GotFocus ="PWeight_GotFocus"/>
        </Border>


        <Border 
                    Background="Black" 
                    CornerRadius="20"
                    VerticalAlignment="Top"
                    Padding="10" 
                    Height="70" Margin="343,822,1399,0">
            <Button  x:Name="PAdd" Style="{StaticResource ZoomButtonStyle}" Template="{StaticResource NoMouseOverButtonTemplate}" Foreground="White" Background =" Transparent" FontSize="25" FontFamily="Gill Sans MT" Content="Add Player" HorizontalAlignment="Center" VerticalAlignment="Center" Click="PAdd_Click" Height="69" Width="178"/>
