                     Text="First Name"
                     TextAlignment="Center"
                     BorderThickness="0"
                     FontSize="30"
                     FontFamily="Gill Sans MT"
                     Background="#3EB489"
                     Foreground="LightGray"
                     GotFocus ="PFirstName_GotFocus"/>
        </Border>

        <Border 
                    Background="#3EB489" 
                    CornerRadius="20"
                    VerticalAlignment="Top"
                    Padding="10" Width="400" 
